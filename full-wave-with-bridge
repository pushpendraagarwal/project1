            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6 p-4 bg-slate-50 rounded-lg border">
                <div>
                    <label for="vpeak-slider" class="text-sm font-medium text-slate-700 flex justify-between">
                        Peak Voltage (V_peak)
                        <span id="vpeak-value" class="font-bold text-indigo-600">10.0 V</span>
                    </label>
                    <input id="vpeak-slider" type="range" min="1" max="20" value="10" step="0.5" class="w-full h-2 bg-slate-200 rounded-lg appearance-none cursor-pointer accent-indigo-600">
                </div>
                <div>
                    <label for="resistance-slider" class="text-sm font-medium text-slate-700 flex justify-between">
                        Resistance (R_L)
                        <span id="resistance-value" class="font-bold text-indigo-600">1000 Ω</span>
                    </label>
                    <input id="resistance-slider" type="range" min="100" max="5000" value="1000" step="100" class="w-full h-2 bg-slate-200 rounded-lg appearance-none cursor-pointer accent-indigo-600">
                </div>
                <div>
                    <label for="capacitance-slider" class="text-sm font-medium text-slate-700 flex justify-between">
                        Capacitance (C)
                        <span id="capacitance-value" class="font-bold text-indigo-600">100 µF</span>
                    </label>
                    <input id="capacitance-slider" type="range" min="1" max="500" value="100" step="1" class="w-full h-2 bg-slate-200 rounded-lg appearance-none cursor-pointer accent-indigo-600">
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-5 gap-6">
                
                <div class="md:col-span-3">
                    <h3 class="text-lg font-semibold mb-2">Input & Output Waveforms</h3>
                    <canvas id="waveform-canvas" width="600" height="400" class="w-full"></canvas>
                    <div class="flex justify-center gap-6 mt-2 text-sm">
                        <div class="flex items-center">
                            <span class="w-4 h-1 bg-cyan-400 inline-block mr-2"></span>
                            <span class="font-medium text-slate-600">AC Input (V_in)</span>
                        </div>
                        <div class="flex items-center">
                            <span class="w-4 h-1 bg-amber-400 inline-block mr-2"></span>
                            <span class="font-medium text-slate-600">DC Output (V_out)</span>
                        </div>
                    </div>

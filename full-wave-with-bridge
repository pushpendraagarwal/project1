    <script>
        document.addEventListener('DOMContentLoaded', () => {
            
            const hwrButton = document.getElementById('hwr-button');
            const fwrButton = document.getElementById('fwr-button');
            const filterCheckbox = document.getElementById('filter-checkbox');
            
            const canvas = document.getElementById('waveform-canvas');
            const ctx = canvas.getContext('2d');
            
            const circuitTitle = document.getElementById('circuit-title');
            const circuitDiagram = document.getElementById('circuit-diagram');
            const resultsDisplay = document.getElementById('results-display');
            const theorySnippet = document.getElementById('theory-snippet');
            
            const vPeakSlider = document.getElementById('vpeak-slider');
            const vPeakValue = document.getElementById('vpeak-value');
            const resistanceSlider = document.getElementById('resistance-slider');
            const resistanceValue = document.getElementById('resistance-value');
            const capacitanceSlider = document.getElementById('capacitance-slider');
            const capacitanceValue = document.getElementById('capacitance-value');
            
            let simState = {
                mode: 'hwr',
                filter: false,
                time: 0,
                vPeak: 10.0,
                resistance: 1000,
                capacitance: 100e-6,
                frequency_hz: 50,
                capVoltage: 0,
            };

            const diagramLinks = {
                hwr: 'https://i.ibb.co/Kj1Xbkx3/Screenshot-2025-11-15-at-10-40-48-AM.png',
                hwrFilter: 'https://i.ibb.co/j32T4sJ/hwr-filter.png',
                fwr: 'https://i.ibb.co/kgsxCcCG/Screenshot-2025-11-16-at-10-55-00-AM.png',
                fwrFilter: 'https://i.ibb.co/9gqjL1M/fwr-bridge-filter.png'
            };

            const W = canvas.width;
            const H = canvas.height;
            const midY = H / 2;

            const drawingFrequency = 2.5;
            const maxVoltage = 20;
            const pixelsPerVolt = (H / 2) / maxVoltage;
            
            hwrButton.addEventListener('click', () => setMode('hwr'));
            fwrButton.addEventListener('click', () => setMode('fwr'));
            filterCheckbox.addEventListener('change', (e) => {
                simState.filter = e.target.checked;
                simState.capVoltage = 0;
                updateUI();
            });
            
            vPeakSlider.addEventListener('input', (e) => {
                const val = parseFloat(e.target.value);
                simState.vPeak = val;
                vPeakValue.textContent = `${val.toFixed(1)} V`;
                updateUI();
            });

            resistanceSlider.addEventListener('input', (e) => {
                const val = parseInt(e.target.value);
                simState.resistance = val;
                resistanceValue.textContent = `${val} Ω`;
                updateUI();
                simState.capVoltage = 0;
            });

            capacitanceSlider.addEventListener('input', (e) => {
                const val = parseInt(e.target.value);
                simState.capacitance = val * 1e-6;
                capacitanceValue.textContent = `${val} µF`;
                updateUI();
                simState.capVoltage = 0;
            });

            function setMode(mode) {
                simState.mode = mode;
                simState.capVoltage = 0;
                
                if (mode === 'hwr') {
                    hwrButton.classList.add('bg-indigo-600', 'text-white', 'z-10', 'ring-2', 'ring-indigo-500');
                    hwrButton.classList.remove('bg-white', 'text-slate-700', 'hover:bg-slate-50');
                    fwrButton.classList.add('bg-white', 'text-slate-700', 'hover:bg-slate-50');
                    fwrButton.classList.remove('bg-indigo-600', 'text-white', 'z-10', 'ring-2', 'ring-indigo-500');
                } else {
                    fwrButton.classList.add('bg-indigo-600', 'text-white', 'z-10', 'ring-2', 'ring-indigo-500');
                    fwrButton.classList.remove('bg-white', 'text-slate-700', 'hover:bg-slate-50');
                    hwrButton.classList.add('bg-white', 'text-slate-700', 'hover:bg-slate-50');
                    hwrButton.classList.remove('bg-indigo-600', 'text-white', 'z-10', 'ring-2', 'ring-indigo-500');
                }
                updateUI();
            }
            
            function updateUI() {
                const { mode, filter, vPeak, resistance, capacitance, frequency_hz } = simState;
                let results = {};
                let theoryText = '';
                let title = '';
                let diagramSrc = '';
                
                const V_rms_in = vPeak / Math.SQRT2;
                const v_dc_unfiltered_hwr = vPeak / Math.PI;
                const v_rms_unfiltered_hwr = vPeak / 2;
                const v_dc_unfiltered_fwr = (2 * vPeak) / Math.PI;
                const v_rms_unfiltered_fwr = vPeak / Math.SQRT2;

                if (mode === 'hwr') {
                    theoryText = "A <strong>half-wave rectifier</strong> uses one diode. During the positive AC cycle, the diode is forward-biased and passes current to the load. During the negative cycle, it's reverse-biased, blocking current. This is simple but inefficient, wasting the negative half, which results in high output ripple.";
                    if (filter) {
                        title = 'Half-Wave with Filter';
                        diagramSrc = diagramLinks.hwrFilter;
                        const V_ripple_pp = vPeak / (frequency_hz * resistance * capacitance);
                        const V_dc = Math.max(v_dc_unfiltered_hwr, vPeak - V_ripple_pp / 2);
                        const ripple_factor = V_ripple_pp / V_dc;
                        results = {
                            V_dc: V_dc.toFixed(2) + ' V',
                            V_rms_out: '~' + V_dc.toFixed(2) + ' V',
                            RippleFactor: (ripple_factor * 100).toFixed(1) + '%'
                        };
                    } else {
                        title = 'Half-Wave Rectifier';
                        diagramSrc = diagramLinks.hwr;
                        results = {
                            V_dc: v_dc_unfiltered_hwr.toFixed(2) + ' V',
                            V_rms_out: v_rms_unfiltered_hwr.toFixed(2) + ' V',
                            RippleFactor: '1.21 (121%)'
                        };
                    }
                } else { 
                    theoryText = "A <strong>full-wave bridge rectifier</strong> uses four diodes to be more efficient. It uses both the positive and negative AC cycles, inverting the negative half to create a positive-only output. This results in a much lower ripple and a higher average DC voltage.";
                    if (filter) {
                        title = 'Full-Wave with Filter';
                        diagramSrc = diagramLinks.fwrFilter;
                        const V_ripple_pp = vPeak / (2 * frequency_hz * resistance * capacitance);
                        const V_dc = Math.max(v_dc_unfiltered_fwr, vPeak - V_ripple_pp / 2);
                        const ripple_factor = V_ripple_pp / V_dc;
                        results = {
                            V_dc: V_dc.toFixed(2) + ' V',
                            V_rms_out: '~' + V_dc.toFixed(2) + ' V',
                            RippleFactor: (ripple_factor * 100).toFixed(1) + '%'
                        };
                    } else {
                        title = 'Full-Wave Rectifier';
                        diagramSrc = diagramLinks.fwr;
                         results = {
                            V_dc: v_dc_unfiltered_fwr.toFixed(2) + ' V',
                            V_rms_out: v_rms_unfiltered_fwr.toFixed(2) + ' V',
                            RippleFactor: '0.482 (48.2%)'
                        };
                    }
                }
                
                circuitTitle.textContent = title;
                circuitDiagram.src = diagramSrc;
                theorySnippet.innerHTML = theoryText;
                
                resultsDisplay.innerHTML = `
                    <p>V_peak (in):&nbsp;&nbsp;${vPeak.toFixed(2)} V</p>
                    <p>V_rms (in):&nbsp;&nbsp;&nbsp;${V_rms_in.toFixed(2)} V</p>
                    <p>R_L:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;${resistance} Ω</p>
                    <p>C:&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;${(capacitance * 1e6).toFixed(0)} µF</p>
                    <p class="mt-2 pt-2 border-t border-slate-600">V_dc (out):&nbsp;&nbsp;&nbsp;${results.V_dc}</p>
                    <p>V_rms (out):&nbsp;&nbsp;&nbsp;${results.V_rms_out}</p>
                    <p>Ripple Factor: ${results.RippleFactor}</p>
                `;
            }

            function drawGrid() {
                ctx.strokeStyle = '#1e293b';
                ctx.lineWidth = 1;

                ctx.beginPath();
                ctx.moveTo(0, midY);
                ctx.lineTo(W, midY);
                ctx.stroke();
                
                ctx.strokeStyle = '#334155';
                ctx.setLineDash([2, 4]);
                ctx.beginPath();
                
                for (let v = 5; v < maxVoltage; v += 5) {
                    const y = midY - v * pixelsPerVolt;
                    ctx.moveTo(0, y);
                    ctx.lineTo(W, y);
                    
                    const y_neg = midY + v * pixelsPerVolt;
                    ctx.moveTo(0, y_neg);
                    ctx.lineTo(W, y_neg);
                }
                ctx.stroke();
                ctx.setLineDash([]);
            }

            function drawWaveforms() {
                const { mode, filter, time, vPeak, resistance, capacitance, frequency_hz } = simState;

                const T_cycle = 1 / frequency_hz;
                const total_time_on_screen = T_cycle * drawingFrequency;
                const dt_pixel = total_time_on_screen / W;
                const tau = resistance * capacitance;
                const dischargeRate = Math.exp(-dt_pixel / tau);
                
                ctx.lineWidth = 2.5;

                ctx.strokeStyle = '#22d3ee';
                ctx.beginPath();
                for (let x = 0; x < W; x++) {
                    const angle = (x / W) * 2 * Math.PI * drawingFrequency + time;
                    const v_in_volts = vPeak * Math.sin(angle);
                    const y = midY - v_in_volts * pixelsPerVolt;
                    if (x === 0) ctx.moveTo(x, y);
                    else ctx.lineTo(x, y);
                }
                ctx.stroke();

                ctx.strokeStyle = '#fbbd23';
                ctx.beginPath();
                
                let localCapVoltage = simState.capVoltage;
                
                for (let x = 0; x < W; x++) {
                    const angle = (x / W) * 2 * Math.PI * drawingFrequency + time;
                    const v_in_volts = vPeak * Math.sin(angle);
                    
                    let v_rectified_volts = 0;
                    if (mode === 'hwr') {
                        v_rectified_volts = Math.max(0, v_in_volts);
                    } else {
                        v_rectified_volts = Math.abs(v_in_volts);
                    }

                    let v_out_volts = v_rectified_volts;

                    if (filter) {
                        if (v_rectified_volts >= localCapVoltage) {
                            localCapVoltage = v_rectified_volts;
                        } else {
                            localCapVoltage *= dischargeRate;
                        }
                        // --- THIS IS THE FIX ---
                        v_out_volts = localCapVoltage;
                        // ----------------------
                    }
                    
                    const y = midY - v_out_volts * pixelsPerVolt;
                    if (x === 0) ctx.moveTo(x, y);
                    else ctx.lineTo(x, y);
                }
                ctx.stroke();
                
                simState.capVoltage = localCapVoltage;
            }

            function animate() {
                
                ctx.fillStyle = '#0f172a';
                ctx.fillRect(0, 0, W, H);
                
                drawGrid();
                drawWaveforms();
                
                simState.time += 0.03;
                
                requestAnimationFrame(animate);
            }
            
            setMode('hwr');
            animate();
        });
    </script>

</body>
</html>
